{
  "manifest_version": 3,
  "name": "Forex Lot Size Calculator",
  "version": "1.0",
  "description": "Quickly calculate forex lot sizes for effective risk management in TradingView.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.tradingview.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.tradingview.com/*"],
      "js": ["contentScript.js"]
    }
  ]
}
